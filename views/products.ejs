<!DOCTYPE html>
<html lang="en">

<head>
    <title>Products</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #fdf2c9;
        }

        .product-container {
            margin-top: 2rem;
            margin-bottom: 10rem;
            /* Add space at the bottom */
        }

        .product-card {
            width: auto;
            /* Fixed width */
            height: 350px;
            /* Fixed height */
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: space-between;
            /* Distribute space evenly */
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 15px;
            text-align: center;
            background: white;
            box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
            /* Add a subtle shadow */
        }

        .product-card img {
            width: 100%;
            height: 150px;
            object-fit: contain;
            margin-bottom: 10px;
        }

        .product-card h5 {
            font-size: 1rem;
            margin-top: 10px;
            color: #333;
        }

        .btn.btn-success.btn-sm.add-to-cart {
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #001a72;
            /* Dark blue */
            color: #fff;
            font-weight: bold;
            text-transform: uppercase;
            border: none;
            border-radius: 0 0 9px 9px;
            /* Rounded corners at the bottom */
            width: 100%;
            /* Full width */
            padding: 10px 0;
            /* Padding for better appearance */
            transition: background-color 0.3s ease;
        }

        .btn.btn-success.btn-sm.add-to-cart i {
            margin-right: 5px;
            font-size: 1.2rem;
        }

        .btn.btn-success.btn-sm.add-to-cart:hover {
            background-color: #000d5c;
            /* Darker blue */
            color: #fff;
        }

        .product-price {
            font-size: 1.2rem;
            font-weight: bold;
            color: #000;
            margin: 10px 0;
        }

        h2 {
            text-align: center;
            margin-bottom: 2rem;
        }

        .footer-container {
            margin-top: 20px;
        }
    </style>
</head>

<body>

    <%- include('partials/navbar') %>


        <!-- Products Grid -->
        <div class="container mt-5">
            <h2>Products</h2>
            <div class="row justify-content-center">
                <% if (products.length> 0) { %>
                    <div class="product-container mt-5">
                        <div class="row g-4">
                            <% products.forEach(product=> { %>
                                <div class="col-md-3">
                                    <div class="product-card"
                                        onclick="window.location.href='/productdescription/<%= product.productId %>'">
                                        <img src="/uploads/<%= product.productImage %>"
                                            alt="<%= product.productName %>">
                                        <h5>
                                            <%= product.productName %>
                                        </h5>
                                        <p class="product-price" data-base-price="<%= product.productPrice %>">
                                            SGD <%= product.productPrice %>
                                        </p>
                                        <!-- <button class="btn btn-success btn-sm add-to-cart"
                                            data-id="<%= product.productId %>" onclick="event.stopPropagation();">
                                            <i class="fas fa-shopping-cart"></i> Add
                                        </button> -->
                                        <% if (product.productStock> 0) { %>
                                            <button class="btn btn-success btn-sm add-to-cart"
                                                data-id="<%= product.productId %>" onclick="event.stopPropagation();">
                                                <i class="fas fa-shopping-cart"></i> Add
                                            </button>
                                            <% } else { %>
                                                <button class="btn btn-danger btn-sm" disabled>
                                                    Out of Stock
                                                </button>
                                            <% } %>
                                    </div>
                                </div>
                                <% }) %>
                                    <% } else { %>
                                        <p class="text-center">No products available in this category.</p>
                                        <% } %>
                        </div>
                    </div>
            </div>

        </div>


        <%- include('partials/footer') %>






            <script src="/js/logout.js"></script>
            <script src="/js/addToCart.js"></script>


</body>

</html>