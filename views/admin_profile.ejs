<!DOCTYPE html>
<html lang="en">

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Admin Profile</title>
    <style>
        .profile-box {
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 20px;
            background: #f9f9f9;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #fdf2c9;
        }

        .profile-image {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            margin-bottom: 15px;
            object-fit: cover;
        }

        .content {
            margin-top: 70px;
            /* Adjust this value to match the height of your navbar */
            padding: 20px;
        }
    </style>
</head>

<body>

    <%- include('partials/admin_navbar') %>

        <div class="container mt-5" >
            <div class="content">
            <h2>Admin Profile</h2>
            <hr>
            <div class="row">
                <!-- Personal Information -->
                <div class="col-md-6">
                    <div class="profile-box text-center">
                        <h4>Personal Information</h4>
                        <img src="/uploads/<%= user.userImage %>" alt="Profile Picture" class="profile-image">
                        <form method="post" action="/admin_profile/update_picture" enctype="multipart/form-data">
                            <div class="mb-3">
                                <label for="image" class="form-label">Change Profile Picture</label>
                                <input type="file" class="form-control" id="image" name="image" required>
                            </div>
                            <button type="submit" class="btn btn-primary">Change Profile Picture</button>
                        </form>
                        <hr>
                        <p><strong>Name:</strong>
                            <%= user.username %>
                        </p>
                        <p><strong>Email:</strong>
                            <%= user.userEmail %>
                        </p>
                        <p><strong>Address:</strong>
                            <%= user.userAddress %>
                        </p>
                        <p><strong>Role:</strong>
                            <%= user.userRole %>
                        </p>
                    </div>
                </div>

                <!-- Update Profile Form -->
                <div class="col-md-6">
                    <h4>Update Profile</h4>
                    <form method="post" action="/admin_profile">
                        <div class="mb-3">
                            <label for="username" class="form-label">Username</label>
                            <input type="text" class="form-control" id="username" name="username"
                                value="<%= user.username %>" required>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="email"
                                value="<%= user.userEmail %>" required>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" class="form-control" id="password" name="password"
                                value="<%= user.userPassword %>" required>
                        </div>
                        <div class="mb-3">
                            <label for="address" class="form-label">Address</label>
                            <input type="text" class="form-control" id="address" name="address"
                                value="<%= user.userAddress %>" required>
                        </div>

                        <button type="submit" class="btn btn-primary">Update Profile</button>
                        <a href="/admin_dashboard" class="btn btn-secondary">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
        <%- include('partials/admin_footer') %>
</body>

<script src="/js/logout.js"></script>

</html>